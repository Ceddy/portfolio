extends layout

block body
  div(ng-controller='AppCtrl')
    div#main-container
      div#main-graphic
        img#index-logo.index-graphic(src='/images/logo.png')
        img#index-icon.index-graphic(src='/images/icon.png')

      div#main-intro
        p.intro-name {{name}}
        div.intro-desc
          div.intro-role-containers
            p.intro-desc developer
          +
          div.intro-role-containers
            p.intro-desc designer

      div#main-navigation
        ul.menu
          li
            a.nav-link(href='about') about
          li
            a.nav-link(href='projects') projects
          li
            a.nav-link(href='contact') contact
          li
            a.nav-link(href='resume') resume
      div(ng-view)

  script(src='js/lib/angular/angular.js')
  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/filters.js')
  script(src='js/directives.js')
